   keywords = {Catch-and-release,Centropomus undecimalis,Estuaries,Florida,Marine protected areas,Model,Recreational fishery,SPR,Trophy fish},
   pages = {60-73},
   publisher = {Elsevier B.V.},
   title = {Modeling marine protected area value in a catch-and-release dominated estuarine fishery},
