   pages = {12-14},
   publisher = {Elsevier Ltd},
   title = {Criticism of Marine Protected Areas by fisheries scientists},
   volume = {108},
   url = {http://dx.doi.org/10.1016/j.marpolbul.2016.05.026},
   year = {2016},
}
