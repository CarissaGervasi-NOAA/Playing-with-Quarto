   keywords = {carbon-13,deuterium,dispersal,migration,nitrogen-15,probabilistic assignment},
   pages = {332-341},
   title = {Inferring origins of migrating insects using isoscapes: a case study using the true armyworm, Mythimna unipuncta, in North America},
   volume = {43},
   url = {https://onlinelibrary-wiley-com.ezproxy.fiu.edu/doi/pdf/10.1111/een.12505},
