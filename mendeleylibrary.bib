   issue = {February},
   journal = {Marine Policy},
   keywords = {Adaptive management,Data-limited fisheries,Decision-support frameworks,Model-free indicators},
   pages = {28-37},
   publisher = {Elsevier},
   title = {An indicator-based adaptive management framework and its development for data-limited fisheries in Belize},
   volume = {76},
   url = {http://dx.doi.org/10.1016/j.marpol.2016.11.027},
   year = {2017},
}
@article{Hauser2019,
   abstract = {<div class="abstract-group">
