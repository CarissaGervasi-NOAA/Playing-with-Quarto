   keywords = {Amazon Basin,Brazilian coast,Ethnobiology,Fish ecology,Fisheries management,Human ecology,Mekong River},
   pages = {657-675},
   title = {Beyond fishermen's tales: Contributions of fishers' local ecological knowledge to fish ecology and fisheries management},
