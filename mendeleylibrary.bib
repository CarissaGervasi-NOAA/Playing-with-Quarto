   pmid = {495},
   title = {Are marine reserves effective in management of reef fisheries?},
   volume = {1},
   url = {http://dx.doi.org/10.1007/BF00042662%5Cnhttp://www.jstor.org/stable/4314106%5Cnhttp://link.springer.com/article/10.1007/BF00042662},
