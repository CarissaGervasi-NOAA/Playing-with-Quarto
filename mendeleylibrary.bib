   title = {Extent of Mississippi River water in the Mississippi Bight and Louisiana Shelf based on water isotopes},
   volume = {226},
   url = {https://doi.org/10.1016/j.ecss.2019.04.030},
   year = {2019},
}
@article{Lin2011,
