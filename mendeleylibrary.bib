   journal = {PeerJ},
   keywords = {Angler perceptions,Angler surveys,Citizen science,Collaborative fisheries research,Cooperative research,Fisheries data quality,Marine life protection act,Marine protected areas,Participatory science,Stakeholder engagement},
   pages = {1-26},
   title = {Long-term participation in collaborative fisheries research improves angler opinions on marine protected areas},
