   issue = {4},
   journal = {Journal of Fish Biology},
   keywords = {allometry,aquaculture,body weight,ecosystem,mortality,predation},
   pages = {627-647},
   title = {The relationship between body weight and natural mortality in juvenile and adult fish - a comparison of natural ecosystems and aquaculture [Review]},
