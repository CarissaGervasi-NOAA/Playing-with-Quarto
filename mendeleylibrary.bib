   issue = {June},
   journal = {Harmful Algae},
   keywords = {Causal networks,Cultural eutrophication,Lake Okeechobee,Nonlinear time series analysis,Red tides,Water quality},
   month = {9},
   pages = {101900},
   pmid = {33129457},
   publisher = {Elsevier},
   title = {Seasonal dynamics of terrestrially sourced nitrogen influenced Karenia brevis blooms off Florida's southern Gulf Coast},
