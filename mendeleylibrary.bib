   journal = {Marine Biology},
   pages = {1001-1014},
   title = {Distribution of carangid larvae (Teleostei: Carangidae) and concentrations of zooplankton in the northern Gulf of Mexico, with illustrations of early <i>Hemicaranx amblyrhynchus</i> and <i>Caranx</i> spp. larvae},
