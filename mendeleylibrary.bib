   issue = {12},
   journal = {Water Resources Research},
   keywords = {Stormwater Treatment Areas,causal networks,chaos,coupled natural-human systems,nonlinear time series analysis,water quality management},
   pages = {11101-11120},
   title = {Nonlinear Dynamics in Treatment Wetlands: Identifying Systematic Drivers of Nonequilibrium Outlet Concentrations in Everglades STAs},
   volume = {55},
   year = {2019},
}
