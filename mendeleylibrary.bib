   journal = {Fisheries Research},
   keywords = {Age validation,Ageing bias,Otolith,Pacific cod (Gadus macrocephalus),Stable oxygen isotopes,Temperature},
   pages = {43-53},
   title = {Age validation of Pacific cod (Gadus macrocephalus) using high-resolution stable oxygen isotope ( 18 O) chronologies in otoliths},
