   journal = {Environmental Biology of Fishes},
   pages = {243-252},
   title = {Patterns of stable carbon isotope turnover in gag, Mycteroperca microlepis, an economically important marine piscivore determined with a non-lethal surgical biopsy procedure},
   volume = {90},
   url = {https://jamesanelson.files.wordpress.com/2012/03/nelsonturnover.pdf},
   year = {2011},
}
