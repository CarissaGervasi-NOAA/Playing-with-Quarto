   journal = {Progress in Oceanography},
   keywords = {Biodiversity,Climate,Ecosystem indicators,Gulf of Alaska,Ichthyoplankton,Synchrony,Walleye pollock},
   pages = {134-145},
   title = {Long-term trends in ichthyoplankton assemblage structure, biodiversity, and synchrony in the Gulf of Alaska and their relationships to climate},
   volume = {170},
   year = {2019},
}
