   issn = {2041210X},
   issue = {6},
   journal = {Methods in Ecology and Evolution},
   keywords = {acoustic telemetry,fish movement,habitat use and survival,simulation},
   pages = {1489-1502},
   title = {Evaluation of acoustic telemetry grids for determining aquatic animal movement and survival},
