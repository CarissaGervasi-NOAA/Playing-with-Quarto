   doi = {10.1016/j.fishres.2003.08.007},
   isbn = {0165-7836},
   issn = {01657836},
   issue = {1},
   journal = {Fisheries Research},
   keywords = {Chemical marking,Daily increments,Mark-recapture,Otolith sections,Whole otoliths},
   pages = {1-12},
   title = {Age and growth of Argyrozona argyrozona (Pisces: Sparidae) in a marine protected area: An evaluation of methods based on whole otoliths, sectioned otoliths and mark-recapture},
