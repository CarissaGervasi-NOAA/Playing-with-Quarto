   issue = {4},
   journal = {Fish and Fisheries},
   keywords = {Bayesian measurement error,FishBase,RAM Legacy database,productivity,resilience,spawning potential ratio,steepness},
   pages = {760-773},
   title = {Identifying spawner biomass per-recruit reference points from life-history parameters},
   volume = {21},
