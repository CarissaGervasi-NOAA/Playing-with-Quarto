@article{Gillson2019,
   abstract = {Adaptive management (AM) and evidence-based conservation (EBC) have emerged as major decision-making frameworks for conservation management. AM deals with complexity and the importance of local context in making conservation decisions under conditions of high variability, uncertainty, and rapid environmental and social change. EBC seeks for generality from empirical data and aims to develop and enhance best practice. The goal of this review is to explore opportunities for finding common ground between AM and EBC. We propose a framework for distinguishing the subset of conservation problems that are amenable to an evidence-based approach, based on levels of uncertainty , complexity, and social agreement. We then suggest ways for combining multiple lines of evidence and developing greater opportunities for iteration and co-learning in EBC. The Debate over Adaptive Management versus Evidence-Based Conservation Adaptive management (AM) is a key approach to conservation implementation in conditions of high variability, uncertainty, complexity, and rapid environmental and social change. In such situations, AM, which involves a cycle of problem definition, planning, implementation, monitoring , evaluation, knowledge-sharing, and adaptation, allows practitioners, planners, and researchers to learn by doing. AM involves identifying the conservation problem, defining management objectives, then exploring options for management interventions that are thought to result in these objectives. Once implemented, management interventions are monitored, and the results are used to redefine management objectives and/or refine future management options. The process is iterative and multiple cycles are needed so that management can respond to emerging knowledge, changing environmental conditions, or shifts in stakeholder preferences. AM has many advantages in terms of its focus on learning and its ability to accommodate the complexity and plurality, which is a feature of most conservation problems. Various forms of AM have evolved that are suited to different local contexts and policy environments. For example, in South Africa, strategic adaptive management (SAM) emerged from the need to develop new conservation goals based on a nonequilibrium ecological paradigm and in situations of high social complexity (Box 1). However, critics of AM argue that the AM process is too cumbersome and a method is needed that allows conservation decisions to be made rapidly and efficiently, based on prior experience. Evidence-based conservation (EBC) aims to provide a pragmatic alternative, where conservation managers can efficiently share information on the outcome of management interventions, contributing to a shareable database that can be freely accessed by all. Highlights Adaptive management (AM) and evidence based conservation (EBC) have emerged as leading approaches to conservation management. AM allows for exploration of complexity under conditions of high uncertainty, while EBC allows managers to pool experience of the outcomes of conservation intervention in order to decide on 'best practice'. We explore a framework for defining the subset of conservation problems to which EBC could be applied, using certainty and agreement as guiding principles. We develop a modified adaptive management cycle that includes an evidence base alongside iterative learning feedbacks. We consider tools and methods that allow the integration of multiple types of evidence alongside empirical scientific data and explore the possibilities for databases that are capable of learning.},
   author = {Lindsey Gillson and Harry Biggs and Izak P J Smit and Malika Virah-Sawmy and Kevin Rogers},
   doi = {10.1016/j.tree.2018.10.003},
   issue = {1},
   journal = {Trends in Ecology & Evolution},
   keywords = {Complexity,adaptive management cycle,conservation decisions,uncertainty},
   pages = {31-44},
   title = {Finding Common Ground between Adaptive Management and Evidence-Based Approaches to Biodiversity Conservation},
   volume = {34},
   url = {https://doi.org/10.1016/j.tree.2018.10.003},
   year = {2019},
}
