   issn = {0706-652X},
   journal = {Canadian Journal of Fisheries and Aquatic Sciences},
   title = {Greenland halibut (Reinhardtius hippoglossoides) spawn annually but successive cohorts of oocytes develop over 2 years, complicating correct assessment of maturity},
