   journal = {Marine Ecology},
   keywords = {Agonistic behaviours,Pagrus auratus,marine protected areas},
   pages = {n/a-n/a},
   title = {Do agonistic behaviours bias baited remote underwater video surveys of fish?},
   volume = {36},
   url = {http://dx.doi.org/10.1111/maec.12185%5Cnhttp://onlinelibrary.wiley.com/store/10.1111/maec.12185/asset/maec12185.pdf?v=1&t=hzktdgcp&s=4e38d27d40a54df0ac3631e412ef2dac9c95ae45},
