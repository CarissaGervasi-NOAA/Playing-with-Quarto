   keywords = {Chemical composition,Fin rays,Fin spines,Otoliths,Scales,Vertebrae},
   pages = {205-234},
   title = {Chemical Composition of Fish Hard Parts as a Natural Marker of Fish Stocks},
   year = {2013},
}
@book{DeCelles2013,
   abstract = {Acoustic and radio telemetry have revealed new information on the behavior and migration of fish and invertebrate species, and telemetry is a powerful tool for stock identification. This chapter will provide readers with an overview of telemetry technology, experimental methods, and data analysis techniques, as well as a discussion of the relative strengths and weaknesses of telemetry. Case studies are presented to demonstrate how telemetry has been used to investigate critical areas of stock identification research, such as homing, contingent structure, and stock mixing. Finally, we discuss future innovations in telemetry research. We predict that telemetry will become an increasingly important component of multidisciplinary stock identification studies in the years ahead. © 2014 Elsevier Inc. All rights reserved.},
