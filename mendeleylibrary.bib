   keywords = {Dolphinfish,Growth performance index,Simultaneous confidence region,Stock structure,Von Bertalanffy growth function},
   pages = {127-136},
   publisher = {Elsevier B.V.},
   title = {Possible stock structure of dolphinfish (Coryphaena hippurus) in Taiwan coastal waters and globally based on reviews of growth parameters},
